<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white shadow-lg rounded-lg p-8">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-700">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>

      <!-- Email -->
      <div>
        <%= f.label :email, class: "block text-gray-600 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, class: "block text-gray-600 font-medium mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password",
              class: "w-full px-4 py-2 border rounded-lg focus:ring focus:ring-indigo-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-gray-600" %>
        </div>
      <% end %>

      <!-- Submit -->
      <div>
        <%= f.submit "Log in",
              class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition" %>
      </div>

    <% end %>

    <div class="text-center mt-4 text-sm text-gray-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
